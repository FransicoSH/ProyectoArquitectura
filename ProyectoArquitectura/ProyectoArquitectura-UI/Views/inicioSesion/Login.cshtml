@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>
    <link rel="stylesheet" href="~/Content/css/inicioSesion/Login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>



    <div class="container-Login">
        <div class="login-box">
            <img class="avatar" id="avatar-img" src="~/Content/Public/img/usuario.png" alt="Avatar">
            @using (Html.BeginForm("IniciarSesion", "inicioSesion", FormMethod.Post))
            {
                <form>
                    <input type="text" id="UserName" name="UserName" placeholder="Usuario" required>
                    <input type="password" id="Password" name="Password" placeholder="Contraseña" required>
                    <button id="login-btn" type="submit">Iniciar sesión</button>
                </form>
            }
        </div>
    </div>


    <!-- Modal Error -->
    <div class="modal fade" id="ErrorModal" tabindex="-1" aria-labelledby="Eliminar cliente" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Error en el sistema</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="mensajeExito">
                        <p><i class="fa-solid fa-triangle-exclamation"></i> @TempData["LoginFail"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js' integrity='sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r' crossorigin='anonymous'></script>")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>


    @if (TempData["LoginFail"] != null)
    {
        <script>
            $(document).ready(function () {
                console.log("fail")
                $('#ErrorModal').modal('show');
            });

        </script>
    }
</body>
</html>

