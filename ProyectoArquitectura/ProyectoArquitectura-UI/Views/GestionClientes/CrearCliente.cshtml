@{
    ViewBag.Title = "CrearCliente";
    Layout = null;
}

@if (TempData["MensajeError"] != null)
    {
        <script>
            alert("Ya existe un registro con de ese cliente" );
        </script>
    }


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/css/Gestiones/Formularios.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    @if (TempData["MensajeError"] != null)
    {
        <script>
            $(document).ready(function () {
                $('#ErrorModal').modal('show');
            });
        </script>
    }

<div class="Contenedor-From">

    @using (Html.BeginForm("CrearNuevoCliente", "GestionClientes", FormMethod.Post, new { @class = "Form-Main ", id = "FormCrearCliente" }))
    {
        <form class="" id="FormCrearCliente">
            <h2>Crear Cliente</h2>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span>
                <input type="text" class="form-control" name="Identificacion" id="Identificacion" placeholder="Identificacion" required>
                <div class="invalid-feedback">Por favor, ingrese un nombre válido.</div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-person-circle-plus"></i></span>
                <input type="text" class="form-control" name="Nombre" id="Nombre" placeholder="Nombre" required>
                <div class="invalid-feedback">Por favor, ingrese un nombre válido.</div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group  mb-3">
                    <span class="input-group-text">Apellidos</span>
                    <input type="text" class="form-control" name="PrimerApellido" id="PrimerApellido" placeholder="Primer apellido" required>
                    <input type="text" class="form-control" name="SegundoApellido" id="SegundoApellido" placeholder="Segundo apellido" required>
                    <div class="invalid-feedback">Por favor, ingrese los apellidos completos</div>
                </div>
            </div>

            <div class="row  mb-3">

                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Correo electronico</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3">ejemplo@email.com</span>
                        <input type="email" class="form-control" name="CorreoElectronico" id="CorreoElectronico" aria-describedby="basic-addon3 basic-addon4" required>
                        <div class="invalid-feedback">Por favor, ingrese un Correo Electronico válido</div>

                    </div>
                </div>

                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Telefono</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3"><i class="fa-solid fa-phone"></i></span>
                        <input type="tel" class="form-control" name="NumeroTelefono" id="NumeroTelefono">
                    </div>
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-text">Direccion</span>
                <textarea class="form-control" name="Direccion" id="Direccion"></textarea>
            </div>
            <br />

            <div class="row">
                <h5>Detalle de medidas</h5>

            </div>

            <div class="row  mb-3">
                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Altura</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3"><i class="fa-solid fa-plus"></i></span>
                        <input type="text" class="form-control" name="Altura" id="Altura" onkeydown="filtro()" step="any" required>
                        <div class="invalid-feedback">Por favor, ingrese una altura válido.</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Peso</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3"><i class="fa-solid fa-weight-scale"></i></span>
                        <input type="number" class="form-control" name="Peso" onkeydown="filtro()" id="Peso" step="any" required>
                        <div class="invalid-feedback">Por favor, ingrese un peso válido.</div>
                    </div>
                </div>
            </div>


            <div class="row  mb-3">
                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Porcentaje Masa Muscular</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3"><i class="fa-solid fa-dumbbell"></i></span>
                        <input type="text" class="form-control" name="PorcentajeMasaMuscular" id="PorcentajeMasaMuscular" onkeydown="filtro()" step="any" required>
                        <div class="invalid-feedback">Por favor, ingrese un Porcentaje Masa Muscular válido.</div>

                    </div>
                </div>

                <div class="col-md-6">
                    <label for="basic-url" class="form-label">Porcentaje Grasa Corporal</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon3"><i class="fa-solid fa-weight-hanging"></i></span>
                        <input type="number" class="form-control" name="PorcentajeGrasaCorporal" onkeydown="filtro()" step="any" id="PorcentajeGrasaCorporal" required>
                        <div class="invalid-feedback">Por favor, ingrese un Porcentaje Grasa Corporal válido.</div>

                    </div>
                </div>

            </div>

            <div class="row  mb-4  Btn-content">
                <div class="col-md-6 justify-content-end ">
                    <button type="submit" class="btn btn-primary ">Guardar</button>
                    <button type="button" class="btn btn-danger btnGuardar" onclick="redireccionar()">Cancelar</button>
                </div>




            </div>
        </form>
    }
</div>


    <!-- Modal Error -->
    <div class="modal fade" id="ErrorModal" tabindex="-1" aria-labelledby="Eliminar cliente" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Error en el sistema</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="mensajeExito">
                        <p><i class="fa-solid fa-triangle-exclamation"></i> @TempData["MensajeError"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>
     function filtro()
        {
            var tecla = event.key;
            if (!/^\d|[\.,e]$/.test(tecla) && !event.ctrlKey && !event.metaKey)
            {
                    event.preventDefault();
            }
        }

    function redireccionar() {
        window.location.href = '@Url.Action("Home", "Dashboard")';
        }
    </script>

    <script>
        (() => {
            'use strict';

            const form = document.getElementById('FormCrearCliente');
            form.addEventListener('submit', event => {
               
            
                form.classList.add('was-validated');
            }, false);
        })();     
    </script>


    <script src="https://kit.fontawesome.com/49ba607fd0.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


</html>
