
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout_dashboardPrincipal.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <script>
        alert('@TempData["Mensaje"]');
    </script>
}

@section head {
    <link href="~/Content/css/Dashboard/Home.css" rel="stylesheet" />
}

<div class="row" style="margin-top:10px; margin-bottom:10px;">
    <div class="col-xxl-4 col-md-6">
        <div class="card info-card sales-card">
            <div class="card-body">
                <h5 class="card-title">Total <span>| Clientes</span></h5>

                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.Clientes.cantidad</h6>
                        @*<span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>*@

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-4 col-md-6">
        <div class="card info-card sales-card">
            <div class="card-body">
                <h5 class="card-title">Total <span>| Membresias</span></h5>

                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.Membresia.cantidad</h6>
                        @*<span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>*@

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-4 col-md-6">
        <div class="card info-card revenue-card">
            <div class="card-body">
                <h5 class="card-title">Total <span>| Usuarios</span></h5>
                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.Usurios.cantidad</h6>
                        @*<span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-12">
    <div class="card top-selling overflow-auto">

        <div class="filter">
            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
        </div>

        <div class="card-body pb-0">
            <h5 class="card-title">Ventas <span>| Membresia</span></h5>

            <table class="table table-borderless">
                <thead>
                    <tr>                      
                        <th scope="col">Menbresia</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad adquisiciones</th>
                        <th scope="col">Tota de venta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menbresiasM in ViewBag.ListMembresia)
                    {
                        <tr>
                            <td><a href="#" class=" fw-bold">@menbresiasM.Nombre</a></td>
                            <td>@string.Format("{0:C}", menbresiasM.Precio)</td>
                            <td class="fw-bold">@menbresiasM.CantidadAdquisiciones</td>
                            <td>@string.Format("{0:C}", menbresiasM.TotalVenta)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>









